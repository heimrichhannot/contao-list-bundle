<div class="submission-form">
    <!-- Button trigger modal -->
    <a href="#" data-bs-toggle="modal" data-bs-target="#submission_{{ identifier }}_modal">
        {{ 'huh.list.misc.contact'|trans }}
    </a>
    <!-- Modal -->
    <div class="modal fade" id="submission_{{ identifier }}_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{ 'huh.list.misc.contact'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form|raw }}
                </div>
            </div>
        </div>
    </div>
</div>
